{
  "policyRule": {
    "if": {
      "allOf": [
        {
          "field": "type",
          "equals": "Microsoft.Compute/virtualMachines"
        }
      ]
    },
    "then": {
      "effect": "deny",
      "details": {
        "message": "VM SKU must be from the allowed list",
        "evaluationDelay": "AfterProvisioning",
        "existenceCondition": {
          "field": "Microsoft.Compute/virtualMachines/hardwareProfile.vmSize",
          "in": "[parameters('allowedSkus')]"
        }
      }
    }
  },
  "parameters": {
    "allowedSkus": {
      "type": "Array",
      "metadata": {
        "displayName": "Allowed VM SKUs",
        "description": "List of allowed VM SKU sizes",
        "strongType": "vmSKUs"
      }
    }
  }
}
